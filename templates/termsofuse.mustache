{{!
    @template local_ai_manager/termsofuse

    Template for the confirmation page.

    Example context (json):
    {
        "showtermsofuse": true,
        "termsofuse": "This are the terms of use which you need to accept",
        "showdataprocessing": true,
        "dataprocessing": "This is that you have to consent regarding data processing"
    }
}}

{{#showtermsofuse}}
    <div class="border border-dark m-3 p-3">
        {{{termsofuse}}}
    </div>
{{/showtermsofuse}}
{{^showtermsofuse}}
    <p>{{#str}}privacy_terms_missing, local_ai_manager{{/str}}</p>
{{/showtermsofuse}}

{{#showdataprocessing}}
    <div class="border border-dark m-3 p-3">
        {{{dataprocessing}}}
    </div>
{{/showdataprocessing}}
